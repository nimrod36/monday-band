# Run the test suite
if npm test; then
    echo "âœ… All tests passed!"
    exit 0
else
    echo "âŒ Tests failed. Push aborted."
    echo "ğŸ’¡ To push without running tests, use: git push --no-verify"
    exit 1
fi
