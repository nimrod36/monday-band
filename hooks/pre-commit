#!/bin/bash

# Pre-commit hook to run tests before committing
# This hook can be bypassed with: git commit --no-verify

set -e

echo "ğŸ§ª Running pre-commit tests..."

# Run the test suite
if npm test; then
    echo "âœ… All tests passed!"
    exit 0
else
    echo "âŒ Tests failed. Commit aborted."
    echo "ğŸ’¡ To commit without running tests, use: git commit --no-verify"
    exit 1
fi
